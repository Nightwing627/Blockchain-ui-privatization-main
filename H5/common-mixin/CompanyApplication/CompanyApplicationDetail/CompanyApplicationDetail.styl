.company-application-detail {
    // width 1180px
    // margin 30px auto 0
    .step-icon {
      width 0.2rem;
      height: 0.2rem;
      border-radius 50%;
      line-height: 0.2rem;
      display inline-block
      text-align center
      // font-size 22px
      margin-right: 0.05rem;
    }
    .application-step {
      min-height: 0.55rem;
      margin-top: 1px;
      line-height: 0.55rem;
      padding: 0 0.15rem;
    }
    .company-content {
      padding: 0 0.15rem;
    }
    .application-title {
      border-bottom-width: 1px;
      border-bottom-style: solid;
      padding: 0.2rem 0;
      .title-desc {
        font-size 12px;
        display: block;
        margin-top: 0.12rem;
      }
      .title-text {
        display: block;
        font-size: 0.16rem;
      }
    }
    .step {
      font-size 14px
      border-bottom-width: 1px;
      border-bottom-style: solid;
      padding: 0.2rem 0;
      .step-title {
        margin-bottom 15px
        font-size 14px
      }
    }
    .setp-line {
      width: 0.6rem;
      display inline-block
      border-top-style solid
      border-top-width 1px
      vertical-align middle
      margin-right 10px
    }
    .option-region {
      font-size 14px
      margin-bottom 17px
    }
    .application-region {
      // padding-left 60px
      padding: 0.3rem 0;
      // padding-bottom 63px
    }
    .btn-region {
      padding-bottom 30px
    }
    .application-desc {
      font-size 12px
      margin-top 20px
    }
    .step-desc{
      line-height 24px
    }
    .sort{
      line-height 22px
    }
    .back-btn{
      left: 50%;
      transform: translateX(-50%);
      margin-top: 0.1rem;
      // margin-left 10px
    }
  }