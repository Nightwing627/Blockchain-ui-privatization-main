.otcRelease-scrollBar {
  width: 380px;
  user-select: none;
  height: 46px
  .scrollBar-page {
    width: 40px;
    float: left;
    line-height: 20px;
  }
  .scrollBar-line {
    width: 300px;
    position: relative;
    float: left;
    height: 20px;
    .scrollBar-line-ball {
      position: absolute;
      width: 18px;
      height: 18px;
      border-radius: 50%;
      top: 1px;
      left: 141px;
      cursor: pointer;
      .num {
        position: absolute;
        width: 18px;
        text-align: center;
        top: 26px;
        font-size: 14px;
      }
    }
    .scrollBar-line-right, .scrollBar-line-left {
      width: 150px;
      float: left;
      height: 2px;
      margin-top: 9px;
      display: inline-block;
    }
  }
  .scrollBar-last {
    text-align: end;
    font-size: 14px;
  }
}