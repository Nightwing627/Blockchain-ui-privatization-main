.otcDetailOrder-message {
    // padding-left: 60px;
    // padding-top: 10px;
    // padding-bottom: 30px;
    // border-bottom-width: 1px;
    // border-bottom-style: solid;
    padding: 0rem 0.15rem;
    display: flex;
    justify-content: space-between;
    width: 100%;
    box-sizing: border-box;
    .otcDetailOrder-title {
      font-size: 22px;
      margin-bottom: 20px;
    }
    .otcDetailOrder-list {
      li {
        margin-top: 5px;
        line-height: 20px;
        display: flex;
        width: 100%;
        font-size: 12px;
        justify-content: space-between;
        .value {
          width: 2rem;
          word-break: break-word;
          text-align: right;
        }
        .key {
          width: 1.45rem;
          word-break: break-word;
        }
      }
    }
    .otcDetailOrder-keys {
      // float: left;
      li {
        line-height: 20px;
        margin-top: 5px;
        font-size: 12px;
        height: 20px;
      }
    }
    .otcDetailOrder-values {
      // float: left;
      // margin-left: 44px;
      width: 2rem;
      flex: 1;
      text-align: end;
      margin-left: 0.5rem;
      .identification-icon{
        margin-left 15px
        .identifi-icon-hover{
          display none
        }
        .identifi-icon{
          display inline-block
        }
        &:hover{
          .identifi-icon{
            display none
          }
          .identifi-icon-hover{
            display inline-block
          }
        }
      }
      li {
        line-height: 20px;
        font-size: 14px;
        margin-top: 5px;
        max-width: 500px;
        // height 20px
        word-wrap: break-word;
      }
    }
  }