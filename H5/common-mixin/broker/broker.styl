.broker {
    // margin-top: -60px;
    .top-content {
      // height: 299px;
      // padding-top: 60px;
      background-repeat: no-repeat;
      background-position: center bottom;
    }
    .warp {
      // width: 1180px;
      // margin: 0 auto;
      .common-table {
        background: none !important;
        .lastTh div {
          margin-right: 10px;
        }
      }
    }
    .page-title {
      margin-top: 70px;
      text-align: center;
      font-size: 32px;
      line-height: 32px;
    }
    .f_r {
      float: right;
    }
    .my-minning-pct {
      margin-top: 96px;
      .tit {
        font-size: 12px;
        line-height: 12px;
      }
      .num {
        font-size: 14px;
        line-height: 14px;
      }
      .pct-bar {
        margin: 10px 0;
        overflow: hidden;
        height: 12px;
        .pct {
          height: 12px;
          width: 50%;
        }
      }
    }
    .wk-info {
      display: flex;
      justify-content: space-between;
      padding: 0.2rem 0.15rem;
      .item-box-left {
      }
      .item-box {
        .name {
          font-size: 0.14rem;
          .dy {
            font-size: 0.12rem;
          }
        }
        .txt {
          font-size: 0.12rem;
          margin-top: 0.1rem;
          text-align: end;
        }
      }
    }
    .user-name{
      .item-box-top{
        padding: 0.15rem;
        .name {
            font-size: 0.14rem;
            .dy {
              font-size: 0.12rem;
            }
          }
        .txt {
            font-size: 0.12rem;
            margin-top: 0.1rem;
          }
      }
      .wk-info{
        padding-top:0;
      }
    }
    .my-harvest {
      border-radius: 2px;
      height: 170px;
      .tit {
        font-size: 14px;
        color: #EDF4F8;
        padding: 16px 0 0 20px;
      }
      .sy-num {
        margin-top: 32px;
        padding-left: 40px;
        float: left;
        span {
          font-size: 32px;
          line-height: 32px;
          display: inline-block;
          margin-right: 5px;
        }
        b {
          font-size: 14px;
        }
        p {
          font-size: 12px;
          margin-top: 10px;
        }
      }
      .tt-num {
        font-size: 14px;
        line-height: 14px;
        .tt-i {
          float: left;
          padding: 0 40px;
          line-height: 30px;
          &:last-child {
            border-left-width: 1px;
            border-left-style: solid;
          }
          .t {
            font-size: 12px;
            margin-right: 5px;
          }
        }
      }
    }
    .mining-data {
    }
    .search {
      line-height: 28px;
      // margin-top: 14px;
      margin-top: 0.1rem
      margin-left: 0.05rem;
      .common-button {
        // float: left;
      }
    }
    .mining-tit {
      height: 0.4rem;
      line-height: 0.38rem;
      padding: 0 0.15rem;
      border-bottom-width: 1px;
      border-bottom-style: solid;
      .item {
        display: inline-block;
        font-size: 14px;
        margin-right: 0.3rem;
        height: 0.38rem;
        user-select: none;
        cursor: pointer;
        &.selected {
          border-bottom-width: 2px;
          border-bottom-style: solid;
        }
      }
    }
    .broker-list {
      padding: 0.2rem 0.15rem;
    }
    .filter-box {
      // height: 65px;
      padding: 0.2rem 0.15rem;
      display: flex;
      flex-wrap: wrap;
      .common-select, .input-line-content {
        // float: left;
        // margin-right: 20px;
      }
      .filter-even:nth-of-type(odd) {
        margin-right: 0.15rem
      }
      .filter-even:nth-child(n+3) {
        margin-top: 0.15rem;
      }
    }
  }