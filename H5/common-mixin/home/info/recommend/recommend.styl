.recommend{
  width: 100%;
  overflow: hidden;
  position: relative;
  z-index: 9;
  margin-top: 10px;
  overflow-x: scroll;
  .recommend-box {
    display: flex;

  }
  .recommend-wrap{
    height: 100%
    margin: 0 auto;
    min-width: 1.49rem;
    display: flex;
    .recommend-content{
      flex: 1;
      min-height: 0.77rem;
      box-shadow: 0 5px 5px 2px rgba(0,0,0,0.04);
      float: left;
      position: relative;
      margin-right: 10px;
      border-radius: 2px;
      &:last-child{
        margin-right: 0;
      }
      .hvol {
        padding: 0.1rem 0.1rem 0 0.1rem;
        &.links {
          cursor: pointer;
        }
      }
      .recommendTop{
        display: flex;
        justify-content: space-between;
        font-family: PingFangSC-Regular;
        font-size: 0.1rem;
        line-height: 20px;
        .percentage {
          margin-left: 0.05rem
        }
      }
      .recommendPrice{
        font-family: PingFangSC-Regular;
        font-size: 0.16rem;
        line-height: 0.2rem;
      }
      .recommendTime{
        font-family: PingFangSC-Regular;
        font-size: 12px;
        line-height: 20px;
      }
    }
  }
  .scroll-btn  {
    position: absolute;
    top: 50%;
    margin-top: -35px;
    width: 40px;
    height: 70px;
    text-align: left;
    line-height: 70px;
    cursor: pointer;
    em {
      position: relative;
      z-index: 10;
      margin: 0 0 0 4px;
      vertical-align: sub;
    }
    .bg {
      display: block;
      width: 70px;
      height: 70px;
      top: 0;
      position: absolute;
      opacity: 0.8;
      border-radius: 100%;
    }
    &:hover {
      .bg {
        opacity: 1;
      }
    }
    &.next {
      right: 0;
      text-align: right;
      em {
        margin: 0 4px 0 0;
      }
      .bg {
        left: 0;
      }
      .icon{
        transform: rotate(180deg);
        display: inline-block;
      }
    }
    &.prev {
      left: 0;
      .bg {
        right: 0;
      }
    }
  }
}
