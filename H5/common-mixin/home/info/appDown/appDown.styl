.home-appdown {
  .recomed{
    position: fixed;
    bottom: 0;
    height: 0.50rem;
    width: 100%;
    z-index: 2;
    .close{
      position: absolute;
      left: 0.07rem;
      width: 0.16rem;
      height: 0.16rem;
      top: -0.08rem;
      border-radius: 50%;
      box-shadow: 0 3px 4px 1px rgba(0,0,0,0.1);
      svg {
        transform: scale(0.7)
      }
    }
    .recomed-cont{
      padding: 0 .15rem;
      display: flex;
      align-items: center;
      height: 100%;
      .left{
        padding-left: 0.1rem;
        height: 100%;
        display: flex;
        flex: 1;
        align-items: center;
        img{
          width: 0.38rem;
          height: 0.38rem;
        }
        .recomed-text {
          margin-left: 0.1rem;
          .recomed-text-title {
            font-size: 0.12rem;
          }
          .recomed-text-warn {
            margin-top: 0.06rem;
            font-size: 0.1rem;
          }
        }
      }
      .right{
        height: 100%;
        display: flex;
        align-items: center;
        .button{
          padding: 0rem 0.22rem
          line-height: 0.36rem;
          height: 0.36rem
          text-align: center;
          border-radius: 2px;
        }
      }
    }
  }
  .mask_layer {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 101;
    background-color: rgba(0, 0, 0, 0.7);
    .brower {
      span  {
        display: inline-block;
        // text-align: left;
      }
      text-align: center
      margin-top: 1.5rem;
      font-size: 0.2rem;
      text-align: left;
      margin-left: 25%;
      position: relative;
      line-height: 0.3rem
      img {
        position: absolute;
        top: -0.55rem;
        left: 1.2rem;
      }
    }
  }
  .kyc-all {
  position: fixed;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.7;
  left: 0;
  top: 0;
  z-index: 50;
}
.kyc-mark {
  position: fixed;
  width: 70%;
  // height: 100%;
  left: 15%;
  top: 50%;
  transform: translateY(-50%);
  z-index: 51;
  background: #fff;
  border-radius: 0.1rem;
  .kyc-mark-title {
    line-height: 0.7rem;
    font-size: 0.18rem;
    text-align: center;
    color: #000;
    font-weight: 700;
  }
  .kyc-mark-text {
    line-height: 0.2rem;
    font-size: 0.14rem;
    text-align: center;
    color: #080808;
    width: 80%;
    margin-left: 10%;
    margin-top: 0.05rem;
    margin-bottom: 0.3rem;
  }
  .kyc-mark-bottom {
    line-height: 0.45rem;
    text-align: center;
    border-top: 0.01rem solid #dddddd;
    color: #397ecc;
  }
}
}