.check-api{
  width:100%;
  .check-api-header{
    font-size: 14px;
    padding: 0 0.15rem;
    line-height: 0.4rem;
    box-sizing: border-box;
    margin-top: 1px;
  }
  .center-inputs{
    padding: 0 0.15rem;
    margin-top: 0.2rem;
  }
  .center-code{
    display: flex;
    padding: 0.2rem 0.15rem;
    .copy {
      float: right;
    }
    img{
      width: 70px;
      height: 70px;
      // margin-bottom 30px
    }
    div{
      display: inline-block;
      height: 0.4rem;
      margin-left: 0.1rem;
      flex: 1;
      p:nth-of-type(1){
        line-height: 0.4rem;
        font-size: 12px;
        padding: 0 0.1rem;
      }
      p:nth-of-type(2){
        font-size: 14px;
      }
    }
  }
}