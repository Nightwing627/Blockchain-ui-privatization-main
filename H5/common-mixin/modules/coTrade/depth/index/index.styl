#coDepth {
.symbol-item {
  line-height: 0.25rem!important;
  height: 0.25rem!important;
}
.tr-bg {
  height: 0.25rem!important;
  bottom: 0!important;
  top: 0!important;
  right: 0!important;
  // top: -1.5px!important;
  left: initial!important;
}
}
.coDepth {
  width: 100%;
  position: relative;
}
.block-header {
  height: 0.39rem;
  line-height: 0.38rem;
  padding: 0 0.07rem 0 0.15rem;
  font-size: 14px;
}
.tbody {
  padding: 4px 0;
}
.current-price {
  height: 0.4rem;
  line-height: 0.4rem;
  padding: 0 15px;
  font-size: 12px;
  margin-top: -1px;
  .price-box {
    float: left;
    height: 0.4rem;
    line-height: 0.4rem;
    font-size: 12px;
    span {
      vertical-align: middle;
    }
    .price {
      margin-right: 10px;
    }
  }
  .jb {
    margin-left:10px;
    display: inline-block;
    float: right;
    i {
      vertical-align: middle;
      display: inline-block;
      width: 6px;
      margin-right: 3px;
      height: 14px;
      border-width: 1px;
      border-style: solid;
      border-radius: 2px;
    }
  }
}
.switch-btn {
  float: right;
  .dtIcon {
    font-size: 16px;
    margin-left: 5px;
    cursor: pointer;
    display: inline-block;
    height: 36px;
    line-height: 36px;
    text-align: center;
    border-radius: 50%;
    width: 36px;
  }
}
.h4 {
  display: inlin;
}
.title-tab {
  margin-right: 30px;
  display: none;
  &.title-new-tab {
    display: none;
  }
}
.trade-shrinks {
  .h4 {
    display: none;
  }
  .title-tab {
    padding: 0 3px;
    cursor: pointer;
    display: inline-block;
    &.title-new-tab {
      display: inline-block;
    }
    &:hover, &.selected {
      border-bottom-style: solid;
      border-bottom-width: 2px;
    }
  }
  .new-tradb, .block-content {
      position: absolute;
      top: 40px;
      left: 0;
      transform: translate(-100%, 0px);
      // left: -100%;
      transition: transform 0.35s cubic-bezier(0.15, 0.3, 0.25, 1) 0s;
      will-change: transform;
    &.is-show {
      display: block;
      left: 0;
      transform: translate(0px, 0px);
    }
  }
  .new-tradb {
    // left: 100%;
    transform: translate(100%, 0px);
  }
}
// 国际版
.Int-contract-content {
  .coDepth,
  .coDepth-block {
    height: 100%;
  }
  .block-content,
  .new-tradb {
    height: calc(100% - 40px);
  }
}