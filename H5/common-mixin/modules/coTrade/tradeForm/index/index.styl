.co-trade-box {
  font-size: 12px;
  padding: 0;
  .trade-depth {
    float: left;
    width: 50%;
  }
  .title-block {
    height: 0.39rem;
    line-height: 0.39rem;
    padding: 0 0.15rem;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    font-size: 14px;
    .tab {
      display: inline-block;
      border-bottom-style: solid;
      border-bottom-width: 0px;
      height: 38px;
      cursor: pointer;
      user-select: none;
      margin-right: 28px;
      font-size: 14px;
      &.a-12-bd {
        border-bottom-style: solid;
        border-bottom-width: 2px;
      }
    }
    &.no-border {
      border: none;
      margin-top: 0.1rem;
    }
  }
  .trade-form {
    float: left;
    width: 50%;
    padding: 0 0.07rem 0 0.15rem;
    box-sizing: border-box;
    .transactionType {
      margin: 0.1rem 0;
    }
    .trade-input {
      height: 76px;
    }
    .buyBtn {
      margin-right: 16px;
    }
    .prime {
      line-height: 14px;
      font-size: 12px;
      margin: 0 0 10px 0;
      .p_r {
        text-align: right;
      }
    }
    .top-mag {
      height: 14px;
      line-height: 14px;
      margin-top: 20px;
      .lov {
        float: right;
        font-size: 14px;
      }
    }
  }
  .top-mag-price {
    height: 40px;
    line-height: 40px;
    margin: 0 0.15rem;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    overflow: hidden;
    .top-mag {
      float: left;
      width: 50%;
    }
    .top-mag-right {
      text-align: right;
    }
  }
  .account-info {
    padding 14px 15px;
    .top-mag {
      height: 24px;
      line-height: 24px;
      .lov {
        float: right;
        font-size: 14px;
      }
    }
    .percentage-mag {
      // margin-top 20px;
    }
    .risk-bar {
      -ms-flex: 1;
      flex: 1;
      background: linear-gradient(90deg,#04BC8B,#EB4D5C);
      position: relative
    }
    .risk-Percentage {
        margin-top: 30px;
        width: 100%;
        height: 15px;
        display: -ms-flexbox;
        display: flex
        position: relative;
    }
    .warning_icon {
      top: 9px;
      position: absolute;
      right: 10px;
    }
    .gg_text {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      text-align: center;
      line-height: 15px;
      font-size: 16px;
      color: $white-color;
      text-shadow: 1px 1px 2px #333333;
    }
    .percentage_bar {
      position: absolute;
      width: 50%;
      left: 0;
      top: 0;
      height: 15px;
    }
    .risk-num {
      position: absolute;
      z-index: 9;
      left: 0;
      padding-left: 7px;
      top: 0px;
      height: 15px;
      line-height: 14px;
      border-left: 3px solid #fff;
      font-size: 14px;
      text-shadow: 2px 2px 3px #333333;
      &.transition {
        transition: all .3s linear;
      }
      span {
        position: absolute;
        top: -20px;
        left: -10px;
      }
    }
    .transaction-drag {
      position: relative;
      width: calc(100% - 15px);
      margin-top: 25px;
    }
    .drag-def,
    .drag-cover {
      position: absolute;
      display: block;
      height: 4px;
      top: 3px;
      left: 4px;
    }
    .drag-def {
      width: 100%;
      background: #293448;
    }
    .drag-cover {
      background: #ff00ff;
    }
    .drag-turnColor {
      background: red;
    }
    .drag-step {
      position: absolute;
      background: #24A0F5;
      left: 0%;
      display: block;
      top: -3px;
      border-radius: 3px;
      width: 15px;
      height: 15px;
      cursor: pointer;
      z-index:5;
      &.transition {
        transition: all .2s ease;
      }
      .icon_h {
        display: block;
        height: 8px;
        width: 3px;
        margin: 3px 0 0 5px;
        background: none;
        border-left: 1px solid #fff;
        border-right: 1px solid #fff;
      }
    }
    .transaction-drag i {
      background: #293448;
      position: absolute;
      top: 1px;
      display: block;
      width: 8px;
      height: 8px;
      cursor: pointer;
      z-index: 4;
      text-align: right;
      border-right: 1px solid #1a1f2a;
      border-left: 1px solid #1a1f2a;
    }
    .transaction-drag i.selected {
      background: $input-focus-border
    }
    .transaction-drag i.drag-step0 {
      left: calc(25% + 4px);
    }
    .drag-step-wrap {
      display: inline-block;
      width: 100%;
      position: relative;
    }
    .mark {
      display: inline-block;
      width: 30px;
      text-align: center;
      left: -10px;
      top: 20px;
      position: absolute
    }
  }
  .common-dialog {
    position: relative;
    z-index: 999;
  }
  .form-info {
    .info-item {
      height: 36px;
      padding: 10px;
      margin-bottom: 1px;
      .text1 {
        font-size: 12px;
        line-height: 18px;
      }
      .text2 {
        font-size: 14px;
        line-height: 18px;
      }
      .text3 {
        line-height: 18px;
      }
      .name {
        font-size: 16px;
        line-height: 22px;
      }
      .price {
        float: right;
        font-size: 14px;
        margin-top: 12px;
      }
    }
  }
  .chiccw {
    margin-top: 13px;
  }
  .lever-box {
    margin-bottom: 0.5rem;
  }
  .dialog-frame-body .lever-box {
    margin-bottom: 0;
  }
}