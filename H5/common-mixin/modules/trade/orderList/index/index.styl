  .leverOrder-list-box {
    // margin-top: 1px;
    width: 100%;
    position: relative;
    padding-bottom: 0.45rem;
    .order-conent {
      padding: 0 0.15rem;
      position: relative;
      .common-table,
      .tab-box {
        min-width: 1200px;
      }
    }
    .notData {
      position: absolute;
      top: 71px;
      left: 0;
      right: 0;
      bottom: 0;
      padding-top: 80px;
      text-align: center;
      font-size: 12px;
      p {
        margin-top: 5px;
      }
      .icon {
        font-size: 36px;
      }
    }
  }
  .trade-content {
    .table-body .notShowe {
      display: none;
    }
    .table-body .marketPriceOrder {
     display: none;
    }
    .table-body {
      min-height: 300px;
    }
  }
  .tab-box {
    height: 0.4rem;
    line-height: 0.4rem;
    padding: 0 0.15rem;
    .tab-item {
      font-size: 14px;
      margin-right: 45px;
      display: inline-block;
      cursor: pointer;
      height: 37px;
      &.selected {
        border-bottom-style: solid;
        border-bottom-width: 2px;
      }
    }
  }
  .opera {
    div {
      padding-right: 10px;
    }
  }
  // 国际版
  .Int-trade {
    .leverOrder-list-box {
      height: 400px;
      .order-conent {
        height: 350px;
      }
      .table-head {
        padding: 0 20px;
      }
    }
  }