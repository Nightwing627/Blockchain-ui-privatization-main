.trade-input {
  .icon-triangle {
    // color: #828EA1;
    position: absolute;
    bottom: -0.04rem;
    left: 0.2rem;
    width:0;
    height:0;
    border-width: 5px 6px 0;
    border-style:solid;
    border-left-color: transparent!important;
    border-right-color: transparent!important;
//   border-color:#828EA1 transparent transparent;/*灰 透明 透明 */
    // text-align: center;
    // width: 20px;
    // line-height: 10px;
    // cursor: pointer;
    transition: all .3s ease-in-out;
  }
  height: 96px;
  position: relative;
  .input-item {
    height: 60px;
    border-width: 1px;
    border-style: solid;
    padding: 0 15px;
    border-radius: 2px;
    position: relative;
    cursor: text;
    .tit {
      line-height: 34px;
      height: 30px;
    }
    .inputs {
      height: 18px;
      line-height: 18px;
      font-size: 14px;
      width: 90%;
    }
    .units {
      position: absolute;
      top: 17px;
      right: 15px;
    }
  }
  .price-rate {
    height: 24px;
    line-height: 24px;
    padding: 0 15px;
    border-radius: 2px;
  }
  .disabledText {
    font-size: 14px;
  }
  .error-msg {
    border-radius: 2px;
    line-height: 32px;
    height: 30px;
    position: absolute;
    top: -36px;
    left: 0;
    right: 0;
    padding: 0 20px;
    em {
      display: block;
      border-width: 7px;
      position: absolute;
      bottom: -14px;
      left: 15px;
      border-style: solid dashed dashed;
      border-color: #EB4D5C transparent transparent;
      font-size: 0;
      line-height: 0;
    }
  }
  &.disabledForm {
    .input-item {
      border-style: dashed;
    }
  }
}
.slide-fade-enter-active {
  transition: all .5s;
}
.slide-fade-leave-active {
  transition: all .5s;
}
.slide-fade-enter, .slide-fade-leave-to
/* .slide-fade-leave-active for below version 2.1.8 */ {
  transform: translateY(-5px);
  opacity: 0;
}