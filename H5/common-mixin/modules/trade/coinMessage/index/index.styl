.trade-coinMessage {
  padding: 0.2rem 0.15rem;
  .trade-coinMessage-title {
    font-size: 0.16rem;
    line-height: 22px;
    word-break: break-all;
  }
  .trade-coinMessage-even {
    margin-top: 0.1rem;
    line-height: 0.2rem;

    li {
      padding: 0.16rem 0;
      border-bottom-width: 1px;
      border-bottom-style: solid;
      display: flex;
      justify-content: space-between;
      word-break: break-all;
      .value {
        width: 58%;
        display: block;
        text-align: right;
      }
      .key {
        width: 38%;
        display: block;
      }
    }
  }
  .trade-coinMessage-messTit {
    margin: 0.15rem 0;
  }
  .trade-coinMessage-mess {
    line-height: 0.2rem;
    padding-bottom: 0.5rem;
    word-break: break-all;
  }
}