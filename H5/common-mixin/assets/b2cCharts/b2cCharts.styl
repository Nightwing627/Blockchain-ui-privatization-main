.otcCharts{
  .otcAccount-body {
    border-top-width: 10px;
    border-top-style: solid;
  }
  .otcAccount-title {
    height: 55px;
    border-bottom-style: solid;
    border-bottom-width: 1px;
    padding: 0 20px;
    vertical-align: middle;
    .text {
      float: left;
      vertical-align: middle;
      display: inline-block;
      line-height: 55px;
      font-size: 14px;
    }
    .hide {
      float: left;
      vertical-align: middle;
      display: inline-block;
      margin-left: 15px;
      line-height: 55px;
      .hodetext {
        margin-left: 8px;
        font-size: 12px;
      }
    }
    .find {
      float: right;
      vertical-align: middle;
      display: inline-block;
      .findClass {
        margin-top: 13px;
      }
    }
  }
  .otcAccount-header {
    width: 100%;
    height: 140px;
    padding: 20px;
    box-sizing: border-box;
    .canvasBox {
      width: 0.7rem;
      height: 0.7rem;
      float: left;
    }
    .otcAccount-assetsSum {
      float: left;
      margin-left: 0.2rem;
      .text {
        font-size: 0.12rem;
        letter-spacing: 0;
        line-height: 0.12rem;
        margin-top: 0.06rem;
        opacity: 0.6
      }
      .num {
        margin-top: 0.06rem;
        font-size: 0.24rem;
        letter-spacing: 0;
        line-height: 0.24rem;
        span {
          font-size: 0.14rem;
          line-height: 0.12rem;
          margin-left: 0.03rem;
          opacity: 0.6
        }
      }
      .conversion {
        margin-top: 0.06rem;
        font-size: 0.14rem;
        line-height: 0.12rem;
        opacity: 0.6
      }
    }
    .otcAccount-colorList {
      width: 100%;
      // margin-left: 40px;
      // margin-top: 10px;
      // display: flex;
      margin-top: 0.15rem;
      li {
        float: left;
        margin-right: 0.1rem;
        line-height: 14px;
        flex: 1;
        font-size: 0.12rem;
        span {
          display: inline-block;
          width: 14px;
          height: 14px;
          border-radius: 2px;
        }
      }
    }
  }
  .otcAccount-header-bg {
    background-image: linear-gradient(-269deg, #5545E0 0%, #294EBB 100%);
  }
  .otcAccount-header {
    background-position: right bottom !important;
    background-repeat: no-repeat !important;
  }
}
