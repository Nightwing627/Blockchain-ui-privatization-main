.page-addressMent {
  .chain-type{
    position relative
    .maintoast-click-space{
      position absolute
      width 100%
      height 0.26rem
      left 0;
      top -0.05rem;
      z-index 99;
    }
    &.showToast {
      .mainChain-page-market {
        display block;
        li {
          word-break: break-all
          font-size: 12px;
          line-height: 16px;
          margin-bottom: 4px;
        }
        .warn {
          margin-top: 10px
        }
      }
    }

    .mainChain-page-market {
      box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
      display none
      position absolute
      top 0.23rem
      width 3.44rem
      padding 0.2rem 0.2rem 0.15rem 0.2rem
      left 0
      box-sizing border-box
      font-family PingFangSC-Regular
      font-size 12px
      letter-spacing 0
      line-height 20px
      z-index 4000
      word-break: break-all
    }
  }
  .mainChain-page-icon {
    // line-height: 28px;
    cursor pointer
    display inline-block
  }
  .mainChain-title {
    // font-size 12px
    line-height 12px
    display: inline-block;
    .icon-14 {
      font-size 12px
    }
    span {
      margin-right 7px
    }
  }
  .nav {
    padding: 0.1rem 0.15rem;
  }
  .icon-btn {
    margin-left: 0 !important;
    margin-right: 5px;
    cursor: auto !important;
  }
  .addressMent-header {
    height: 55px;
    line-height: 55px;
    padding-left: 20px;
    font-size: 14px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    position: relative;
    .header-select {
      width: 120px;
      position: absolute;
      right: 20px;
      top: 9px;
    }
  }
  .addressBox {
    // padding: 28px 40px;
    padding: 0 0.15rem;
    padding-bottom: 0.4rem;
    position: relative;
    .addressBox-left {
      width: 524px;
    }
    .addressBox-right {
      position: absolute;
      right: 20px;
      bottom: 42px;
    }
    .addressBox-select {
      width: 120px;
      float: left;
    }
    .addressBox-address {
      width: 380px;
      margin-left: 24px;
      float: left;
    }
    .addressBox-remarks,
    .addressBox-pages {
      width: 250px;
      float: left;
      margin: 0;
      margin-top: 14px;
    }
    .addressBox-pages {
      margin-left: 24px;
    }
  }
  .addressBox-page-icon {
    line-height: 28px;
    cursor: pointer;
    &:hover {
      .addressBox-page-market {
        display: block;
      }
    }
    .addressBox-page-market {
      display: none;
      position: absolute;
      // top: 24px;
      z-index: 5;
      width: 340px;
      padding: 20px;
      right: 0px;
      box-sizing: border-box;
      font-family: PingFangSC-Regular;
      font-size: 12px;
      letter-spacing: 0;
      line-height: 20px;
    }
  }
  .addressMent-table {
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px;
    .table-head, .table-body-bar, .pagination{
      padding: 0 !important;
    }
  }
  .addressTag{
    .input_line_inp{
      padding-right 24px
    }
  }
}