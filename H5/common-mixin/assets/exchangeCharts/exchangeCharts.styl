.exchangeAccount-header-bg {
  background-image: linear-gradient(-90deg, #4586E0 0%, #294EBB 100%);
  .exchangeAccount-header {
    background-position: right bottom !important;
    background-repeat: no-repeat !important;
    width: 100%;
    height: 140px;
    padding: 20px;
    box-sizing: border-box;
    .canvasBox {
      width: 0.7rem;
      height: 0.7rem;
      float: left;
    }
    .assetsSum {
      float: left;
      margin-left: 0.2rem;
      .text {
        font-size: 0.12rem;
        letter-spacing: 0;
        line-height: 0.12rem;
        margin-top: 0.06rem;
        opacity: 0.6
      }
      .num {
        margin-top: 0.06rem;
        font-size: 0.24rem;
        letter-spacing: 0;
        line-height: 0.24rem;
        span {
          font-size: 0.14rem;
          line-height: 0.12rem;
          margin-left: 0.03rem;
          opacity: 0.6
        }
      }
      .conversion {
        margin-top: 0.06rem;
        font-size: 0.14rem;
        line-height: 0.12rem;
        opacity: 0.6
      }
    }
    .colorList {
      width: 100%;
      // margin-left: 40px;
      // margin-top: 10px;
      // display: flex;
      margin-top: 0.15rem;
      li {
        // float: left;
        // margin-top: 20px;
        line-height: 14px;
        float: left;
        margin-right: 0.1rem;
        font-size: 0.12rem;
        span {
          display: inline-block;
          width: 14px;
          height: 14px;
          border-radius: 2px;
        }
      }
    }
  }
}