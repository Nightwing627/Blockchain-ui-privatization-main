.leverAccount-header {
  width: 100%;
  height: 140px;
  padding: 20px;
  box-sizing: border-box;
  .assetsSum {
    float: left;
    margin-left: 20px;
    .text {
      font-size: 0.12rem;
      letter-spacing: 0;
      line-height: 0.12rem;
      margin-top: 0.06rem;
      opacity: 0.6
    }
    .num {
      margin-top: 0.06rem;
      font-size: 0.24rem;
      letter-spacing: 0;
      line-height: 0.24rem;
      span {
        font-size: 0.14rem;
        line-height: 0.12rem;
        margin-left: 0.03rem;
        opacity: 0.6
      }
    }
    .fnum {
      margin-top: 0.06rem;
      font-size: 0.14rem;
      line-height: 0.12rem;
      opacity: 0.6
    }
    .conversion {
      margin-top: 12px;
      font-size: 14px;
      line-height: 12px;
      opacity: 0.6
    }
  }
  .colorList {
    float: left;
    width: 240px;
    margin-left: 40px;
    margin-top: 10px;
    li {
      float: left;
      width: 80px;
      font-size: 12px;
      margin-top: 20px;
      line-height: 14px;
      span {
        display: inline-block;
        width: 14px;
        height: 14px;
        border-radius: 2px;
        margin-right: 10px;
      }
    }
  }
}
.leverAccount-header-bg {
    background-image: linear-gradient(-269deg, #378dea 0%, #59a0db 100%);
  }
.leverAccount-header {
  background-position: right bottom !important;
  background-repeat: no-repeat !important;
}