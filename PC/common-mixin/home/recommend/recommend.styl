.recommend{
  width: 100%;
  height: 150px;
  overflow: hidden;
  position: relative;
  z-index: 9;
  margin-top: 24px;
  .recommendType {
    position: relative
    .coin-label {
      position: absolute;
      right: -6px;
      transform: translateX(100%);
      top: -9px;
      white-space: nowrap;
      display: inline-block;
      font-size: 12px;
      font-weight: 400;
      padding: 0 4px;
      border-radius: 2px;
      line-height: 17px;

      .coin-label {
        position: relative;
        z-index: 1;
        margin: 0;
        padding: 0;
      }

      .coin-bg {
        display: inline-block;
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0.2;
      }
    }
  }

  .recommend-wrap{
    height: 100%
    margin: 0 auto;
    .recommend-content{
      width: 280px;
      height: 150px;
      box-shadow: 0 5px 5px 2px rgba(0,0,0,0.04);
      float: left;
      position: relative;
      margin-right: 20px;
      border-radius: 2px;
      &:last-child{
        margin-right: 0;
      }
      .hvol {
        padding: 16px 20px 0 18px;
        &.links {
          cursor: pointer;
        }
      }
      .recommendTop{
        display: flex;
        justify-content: space-between;
        font-family: PingFangSC-Regular;
        font-size: 14px;
        line-height: 20px;
      }
      .recommendPrice{
        font-family: PingFangSC-Regular;
        font-size: 22px;
        line-height: 38px;
      }
      .recommendTime{
        font-family: PingFangSC-Regular;
        font-size: 12px;
        line-height: 20px;
      }
    }
  }
  .scroll-btn  {
    position: absolute;
    top: 50%;
    margin-top: -35px;
    width: 40px;
    height: 70px;
    text-align: left;
    line-height: 70px;
    cursor: pointer;
    em {
      position: relative;
      z-index: 10;
      margin: 0 0 0 4px;
      vertical-align: sub;
    }
    .bg {
      display: block;
      width: 70px;
      height: 70px;
      top: 0;
      position: absolute;
      opacity: 0.8;
      border-radius: 100%;
    }
    &:hover {
      .bg {
        opacity: 1;
      }
    }
    &.next {
      right: 0;
      text-align: right;
      em {
        margin: 0 4px 0 0;
      }
      .bg {
        left: 0;
      }
      .icon{
        transform: rotate(180deg);
        display: inline-block;
      }
    }
    &.prev {
      left: 0;
      .bg {
        right: 0;
      }
    }
  }
}
