.europe-recommend {
    width: 1180px;
    margin: 50px auto 0;
    border: 1px solid #E2E9EF;
    box-shadow: 0 4px 12px 0 rgba(0,0,0,0.10);
    border-radius: 4px;
    background: #fff;
    position: relative;
    .recommend-item {
      cursor pointer
      height: 80px;
      line-height: 80px;
      border-bottom: 1px solid #E2E9EF;
      &:hover {
        background: #fff;
        box-shadow: 0 4px 12px 0 rgba(0,0,0,0.10);
        border-radius: 4px;
        margin: 0 -10px;
        padding: 0 10px;
      }
      .td-item {
        float: left;
        font-size: 18px;
      }
      .td-item1 {
        width: 90px;
        text-align: center;
        color: #828EA1;
      }
      .td-item2 {
        width: 565px;
        padding-left: 0px;
        color: #AEBACD;
      }
      .td-item3 {
        width: 130px;
        color: #31363E;
      }
      .td-item4 {
        width: 100px;
      }
      .td-item-kline {
        width: 86px;
        padding-top: 27px;
        margin-right: 40px;
      }
      .td-item-btn {
        button {
          background: #3F78FF;
          border-radius: 4px;
          width: 70px;
          height: 40px;
          line-height: 40px;
          text-align: center;
          font-size: 14px;
          color: #FFFFFF;
          &:hover {
            background: #5B8CFF;
          }
        }
      }
      .b-cion {
        color: #31363E;
      }
      .symbol-icon {
        float: left;
        margin-right: 18px;
        img {
          vertical-align: middle;
          width: 32px;
          height: 32px;
        }
      }
      &.title-th {
        height: 50px;
        line-height: 50px;
        .td-item {
          font-size: 12px;
          color: #AEBACD;
        }
        .td-item2 {
          padding-left: 50px;
        }
        .td-item-kline {
          padding: 0;
        }
        &:hover {
          background: #fff;
          box-shadow: none;
          border-radius: 0;
          margin: 0;
          padding: 0;
        }
      }
    }
    .more {
      height: 60px;
      line-height: 60px;
      text-align: center;
      span {
        font-size: 16px;
        color: #3F78FF;
        cursor: pointer;
        &:hover {
          color: #5B8CFF;
        }
      }
      &:hover {
        background: #fff;
        border-radius: 4px;
        margin: 0 -10px;
        padding: 0 10px;
      }
    }
  }