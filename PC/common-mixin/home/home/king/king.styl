.kingHome{
  background: #fff;
  // 公告样式
  .bulletinBoard{
    border-bottom-width: 1px;
    border-bottom-style: solid;
    border-color: #263043;
    background: #0E1A2E;
    width: 100%;
    height: 38px;
    text-align: center;
    position: relative;
    .backgrounds{
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }
    .bull-bar {
      .notice-item {
        font-family: PingFangSC-Regular;
        font-size: 12px;
        text-align: center;
        position: relative;
        display: inline-block;
        padding-left: 20px;
        box-sizing: border-box;
        line-height: 38px;
        height: 38px;
        a {
          display: inline-block;
          line-height: 20px;
          color: #828EA1;
        }
        .hoverShow {
          display: none;
        }
        .hoverHide {
          display: inline-block;
        }
        i{
          margin-left: 20px;
          display: inline-block;
        }
        &:last-child {
          i{
            display: none;
          }
        }
        &:hover {
          .hoverShow {
            display: inline-block;
          }
          .hoverHide {
            display: none;
          }
        }
        .new {
          font-size: 9px;
          line-height: 18px;
          display: inline-block;
          margin-right: 20px;
          width: 32px;
          height: 16px;
          display: inline-block;
           img {
            width: 100%;
            vertical-align: middle;
            height: 100%;
           }
        }
      }
      .moreButton {
        display: inline-block;
        height: 11px;
        width: 19px;
        vertical-align: middle;
        position: relative;
        margin-left: 20px;
        cursor: pointer;
        img {
          width: 100%;
          height:  100%;
        }
        b {
          top: 0;
          left: 0;
          position: absolute
          display: inline-block;
          height: 10px;
          width: 17px;
        }
        .hover-show {
          display: none;
        }
        &:hover {
          .hover-hide {
            display: none;
          }
          .hover-show {
            display: block;
          }
        }
      }
    }
    .more{
      position: absolute;
      font-family: PingFangSC-Regular;
      font-size: 12px;
      text-align: right;
      right: 20px;
      top: 7px;
    }
  }
  .product-re {
    background-position: center top;
    height: 419px;
    padding-top:1 px;
    width: 100%;
    .title {
      font-size: 40px;
      color: #31363E;
      text-align: center;
      margin-top: 87px;
      font-weight: bold;
    }
    .maker {
      font-size: 16px;
      color: #828EA1;
      text-align: center;
      line-height: 16px;
      margin-top: 18px;
    }
    .register {
      width: 490px;
      margin: 60px auto 0;
    }
    .register-infos{
      background: #FFFFFF;
      border-radius: 2px;
      height 50px !important;
      width 360px !important;
      color: #AAAAAA;
      line-height: 50px !important;
      border: none;
      float: left;
    }
    .input-find-content input {
      color: #31363e !important;
      font-size: 16px !important;
      height 50px !important;
      line-height: 50px !important;
      text-indent: 20px;
      width: 100%;
    }
    .go-register-btn{
      background: #3F78FF;
      border-radius: 2px;
      height: 50px;
      width: 120px;
      line-height: 50px;
      text-align: center;
      float: left;
      font-size: 16px;
      color: #FFFFFF;
      margin-left: 10px;
      &:hover {
        box-shadow: 0 4px 12px 0 rgba(0,0,0,0.10);
        background: #5B8CFF;
      }
    }
  }
}