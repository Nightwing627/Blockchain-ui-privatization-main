.internationalHome.bitsg-home-container {
  background:#fff;
  // 公告样式
  .bulletinBoard {
    border-bottom-width: 1px;
    border-bottom-style: solid;
    width: 100%;
    height: 40px;
    text-align: center;
    .backgrounds {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }
    .bull-bar {
      background :#0D0A10;
      .notice-item {
        font-family: PingFangSC-Regular;
        font-size: 12px;
        text-align: center;
        position: relative;
        display: inline-block;
        box-sizing: border-box;
        line-height: 40px;
        height: 40px;
        padding-left :20px;
        .hoverShow {
          display: none;
        }
        .hoverHide {
          display: inline-block;
          color :#979797;
        }
        i {
          margin-left: 20px;
          display: inline-block;
        }
        &:last-child {
          i {
            display: none;
          }
        }
        &:hover {
          .hoverShow {
            display: inline-block;
            color :#979797;
          }
          .hoverHide {
            display: none;
          }
        }
      }
      .new {
        font-size: 10px;
        height: 16px;
        line-height: 16px;
        width: 34px;
        display: inline-block;
        border-radius:2px;
      }
    }
    .more {
      font-family: PingFangSC-Regular;
      font-size: 12px;
      text-align: right;
      margin-left :20px;
    }
  }
}