.internationalHome-swiper.internationalHome-swiper-biki-container {
  background-position: left top;
  height: 420px;
  width: 100%;
  padding-top: 60px;
  box-sizing: border-box;
  .title {
    font-size: 40px;
    text-align: center;
  }
  .text {
    font-size: 16px;
    margin-top: 20px;
    text-align: center;
  }
  .imgBox {
    .img-ul {
      height: 140px;
      margin: 0 auto;
      width: 1175px;
      overflow: hidden;
      // width: 1
      margin-top: 48px;
      li {
        float: left;
        margin-left: 5px;
        box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
        &:first-child {
          margin: 0;
        }
        img {
          width: 290px;
          height: 140px;
          display: block;
          cursor: pointer;
        }
      }
    }
    .img-pages {
      margin-top: 40px;
      margin-left: 50%;
      transform: translateX(-50%);
      display: inline-block;
      li {
        float: left;
        width: 8px;
        height: 6px;
        margin-right: 10px;
        cursor: pointer;
        transition: all 0.3s;
        &:last-child {
          margin-right: 0;
        }
        .pageBg {
          width: 100%;
          height: 100%;
          background: #fff;
          opacity: 0.3;
          display: block;
        }
      }
      .active {
        width: 40px;
        position: relative;
        .pageBar {
          display: block;
          height: 6px;
          background: #fff;
          transition: all 0.1s linear;
          position: absolute;
          left: 0;
          top: 0;
        }
      }
    }
  }
}