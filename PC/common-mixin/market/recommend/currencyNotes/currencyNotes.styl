.currency-notes.currency-notes-container {
  .flex-row {
    line-height: 17px;
    min-height: 17px;
    margin-bottom: 10px;

    .key {
      font-size: 12px;
      letter-spacing: 0;
      width: 60px;
      float: left;
    }
    .val {
      text-align: right;
      font-size: 14px;
      width: 275px;
      float: left;
      overflow: hidden;
    }
    .link-label {
      color: #24A0F5;
      margin-left: 20px;
    }
  }
  box-sizing: border-box;
  padding: 24px 16px 20px 16px;
  z-index: 99;
  height: 480px;
  .content {
    margin-top: 16px;
    width: 100%;
    .text {
      padding-right: 10px;
      font-size: 12px;
      letter-spacing: 0;
      line-height: 20px;
      word-break: break-all;
    }
  }
}