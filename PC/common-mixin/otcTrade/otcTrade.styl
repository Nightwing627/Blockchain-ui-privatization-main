.page-otcTrade {
  .warning {
    margin-top: 20px;
    font-size: 12px;
    line-height: 16px;
  }
  .input-line-content{
    .input-line-errorStence{
      height auto
      position static
      padding-top 10px
      .input-line-warning{
        position static
        bottom auto
        line-height 16px
      }
      .input-line-error{
        position static
        top auto
        line-height 16px
      }
    }
  }
  width: 1180px;
  min-height: 800px;
  padding-bottom: 80px;
  margin: 30px auto 0 auto;
  .otcTrade-otcPayIcon {
    cursor: auto;
    margin-top: -3px;
    margin-right: 20px;
  }
  .otcTrade-header {
    height: 91px;
    padding-left: 56px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    box-sizing: border-box;
    padding-bottom: 20px;
    padding-top: 20px;
    // 头像
    .otcTrade-page {
      display: inline-block;
      width: 50px
      height: 50px;
      border-radius: 50%;
      text-align: center;
      line-height: 50px;
      font-size: 22px;
      position: relative;
      // float: left;
      vertical-align: middle;
      cursor: pointer;
      div{
        width: 50px
        height: 50px;
        border-radius: 50%;
        overflow hidden
      }
      img {
        width: 50px
        height: 50px;
        display: block
      }
      .lineIcon {
        position: absolute;
        width: 8px;
        height: 8px;
        right: 0px;
        bottom: 0px;
        border-radius: 50%;
        border-style: solid;
        border-width: 2px;
      }
    }
    // 名称/在线状态
    .otcTrade-user {
      display: inline-block;
      // float: left;
      margin-left: 20px;
      vertical-align: middle;
      margin-right: 90px;
      .otcTrade-userName {
        font-size: 14px;
        height: 20px;
      }
      .otcTrade-userStatus {
        margin-top: 4px;
        font-size: 12px;
      }
    }
    .otcTrade-header-even {
      display: inline-block;
      margin-right: 40px;
      vertical-align: middle;
      .otcTrade-header-even-value {
        font-size: 14px;
        // text-align: end;
        height: 20px;
      }
      .otcTrade-header-even-key {
        margin-top: 4px;
        font-size: 12px;
        // text-align: end;
      }
    }
  }
  .otcTrade-message {
    padding-left: 60px;
    padding-top: 40px;
    padding-bottom: 40px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    .otcTrade-message-title {
      font-size: 22px;
      margin-bottom: 20px;
    }
    .otcTrade-message-keys {
      float: left;
      li {
        line-height: 20px;
        margin-top: 20px;
        font-size: 14px;
        height: 20px;
      }
    }
    .otcTrade-message-values {
      float: left;
      margin-left: 44px;
      li {
        line-height: 20px;
        font-size: 14px;
        margin-top: 20px;
        max-width: 600px;
        word-wrap: break-word;
      }
    }
  }
  .closeTrade-dialog {
    font-size: 14px;
    padding-bottom: 10px;
  }
  .otcTrade-options-trade{
    padding-top: 42px;
    padding-left: 60px;
    .options-trade-title {
      font-size: 22px;
    }
    .buttonTimer {
      display: inline-block;
      margin-left: 20px
      font-size: 14px;
    }
    .options-trade-form {
      margin-top: 40px;
      .leftInp, .rightInp {
        width: 240px;
        float: left;
      }
      .tradeIcon {
        height: 46px;
        line-height: 60px;
        text-align: center;
        width: 60px;
        float: left;
      }
    }
    .options-trade-pass {
      width: 240px;
      margin-top: 50px;
    }
  }
  .otcTrade-options-myself {
    padding-top: 42px;
    padding-left: 60px;
    .myself-tip {
      font-size: 14px;
      margin-top: 38px;
    }
    .textButton {
      font-size: 14px;
    }
  }
  .otc-page-title {
    display: none;
  }
}
// 国家版
.Int {
  .page-otcTrade-content {
    height: calc(100% - 85px);
    width: auto;
  }
  .page-otcTrade {
    margin: 0;
    width: auto;
    height: 100%;
    padding-bottom: 0;
    .otcTrade-header,
    .otcTrade-message,
    .otcTrade-options-trade,
    .otcTrade-options-myself {
      padding-left: 0;
    }
    .page-otcTrade-bar {
      width: 940px;
      margin: 0 auto;
      padding-bottom: 50px;
    }
    .otc-page-title  {
      height: 70px;
      line-height: 70px;
      // margin-bottom: 5px;
      border-bottom-width: 5px;
      border-bottom-style: solid;
      display: block;
      .page-title-bar {
        width: 940px;
        margin: 0 auto;
        font-size: 16px;
      }
    }
  }
}
