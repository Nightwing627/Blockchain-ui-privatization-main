.questionsDetails {
  .input-line-warning {
    right: 0
  }
  padding-bottom: 60px;
  .title {
    line-height: 55px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    padding: 0 60px;
  }
  .content {
    padding-left: 60px;
    padding-top: 20px;
  }
  .message {
    min-height: 40px;
    margin-bottom: 20px;
  }
  .message-even {
    float: left;
    min-width: 280px;
  }
  .message-even-title {
    font-size: 12px;
  }
  .message-even-text {
    font-size: 14px;
    margin-top: 6px;
    line-height: 20px;
  }
  .message-even-mess {
    max-width: 590px;
  }
  .message-even-imgBox {
    margin-top: 6px;
    width: 380px;
    height: 140px;
    box-sizing: border-box;
    border-width: 1px;
    border-style: dashed;
    border-radius: 2px;
    overflow: hidden;
    img {
      width: 100%;
      height: 100%;
      display: block;
    }
  }
}