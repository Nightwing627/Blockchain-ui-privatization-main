.page-otcOrder {
  .orderId {
    margin-left: -10px !important;
  }
  .otcOrder-nav {
    height: 55px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    position: relative;
    padding-left: 32px;
    .otcOrder-nav-switchs {
      position: absolute;
      right: 20px;
      top: 20px;
      .switchWrap {
        display: inline-block;
        display: inline-block;
      }
      .text {
        font-size: 12px;
        margin-left: 10px;
        display: inline-block;
      }
    }
  }
  .otcOrder-options {
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px;
    margin-top: 14px;
    .common-select {
      display: inline-block;
      margin-right: 30px;
    }
  }
  .otcOrder-table {
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px;
    .table-head, .table-body-bar, .pagination{
      padding: 0!important;
    }
  }
  .floatLeft{
    float:left;
  }
  .cancel_cause {
    min-width: 80px;
    .icon {
      vertical-align: middle;
    }
    .cancel_cause_text {
      display: none;
      position: absolute;
      width: 200px;
      padding: 10px;
      position: absolute;
      right: 20px;
      top: -10px;
      z-index: 10;
      box-shadow: 0px 0px 5px rgba(0,0,0,0.2);
      line-height: 1.5;
      text-align: center;
      &.position-bottom{
        bottom: -10px;
        top: auto;
      }
    }
    .cancel_cause-btn {
      position: relative;
      &:hover {
        .cancel_cause_text {
          display: block;
        }
      }
    }
  }
  .cancel_cause_right {
    .cancel_cause_text {
      text-align: left;
      left: 20px;
      right: auto;
    }
  }
}