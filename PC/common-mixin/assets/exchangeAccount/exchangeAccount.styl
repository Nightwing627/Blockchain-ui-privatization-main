.showUnlockSell {
  margin-top: 5px;
}
.page-exchangeAccount {
  .position {
    .select-option {
      width: 300px;
    }
  }
  .tableNownStyle {
    display: inline-block;
    height: 26px;
    line-height: 26px;
    padding-left: 10px;
    padding-right: 10px;
    vertical-align: middle;
    cursor: no-drop;
  }
  .tableTithDraw {
    margin-left: 10px
  }
  position: relative;
  width: 100%;
  height: 100%;
  .switchWrap {display: inline-block;}
  .exchangeAccount-header {
    width: 100%;
    height: 140px;
    padding: 20px;
    box-sizing: border-box;
    .canvasBox {
      width: 100px;
      height: 100px;
      float: left;
    }
    .assetsSum {
      float: left;
      margin-left: 20px;
      .text {
        font-size: 12px;
        letter-spacing: 0;
        line-height: 12px;
        margin-top: 12px;
        opacity: 0.6
      }
      .num {
        margin-top: 12px;
        font-size: 32px;
        letter-spacing: 0;
        line-height: 28px;
        span {
          font-size: 14px;
          line-height: 12px;
          margin-left: 3px;
          opacity: 0.6
        }
      }
      .conversion {
        margin-top: 12px;
        font-size: 14px;
        line-height: 12px;
        opacity: 0.6
      }
    }
    .colorList {
      float: left;
      width: 240px;
      margin-left: 40px;
      margin-top: 10px;
      li {
        float: left;
        width: 80px;
        font-size: 12px;
        margin-top: 20px;
        line-height: 14px;
        span {
          display: inline-block;
          width: 14px;
          height: 14px;
          border-radius: 2px;
          margin-right: 10px;
        }
      }
    }
  }
  .exchangeAccount-body {
    border-top-width: 10px;
    border-top-style: solid;
  }
  .exchangeAccount-title {
    height: 55px;
    border-bottom-style: solid;
    border-bottom-width: 1px;
    padding: 0 20px;
    vertical-align: middle;
    .text {
      float: left;
      font-size: 14px;
      vertical-align: middle;
      display: inline-block;
      line-height: 55px;
    }
    .hide {
      float: left;
      vertical-align: middle;
      display: inline-block;
      margin-left: 15px;
      line-height: 55px;
      .hodetext {
        margin-left: 8px;
        font-size: 12px;
      }
    }
    .find {
      float: right;
      vertical-align: middle;
      display: inline-block;
      .findClass {
        margin-top: 13px;
      }
    }
  }
  .exchangeAccount-center {
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px;
    .table-head, .table-body-bar {
      padding: 0!important;
    }
    &.hide-smaill-account{
      .smail-account{
        display:none
      }
    }
  }
  .exchangeAccount-header-bg {
    background-image: linear-gradient(-90deg, #4586E0 0%, #294EBB 100%);
  }
  .exchangeAccount-header {
    background-position: right bottom !important;
    background-repeat: no-repeat !important;
  }
  .ts-content-text {
    line-height: 24px;
  }
}