.otcDeatilOrder-chat {
  width: 360px;
  position: absolute;
  right:0;
  top: 0;
  .buttonClass {
    font-size: 12px
  }
  .chat-title {
    height: 50px;
    padding-left: 26px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    box-sizing: border-box;
    li {
      float: left;
      line-height: 56px;
      margin-right: 40px;
      cursor: pointer;
      font-size: 14px;
      user-select: none;
      position: relative;
    }
    span {
      position: absolute;
      width: 40px;
      height: 2px;
      bottom: 6px;
      left: 50%;
      display: inline-block;
      transform: translateX(-50%);
    }
  }
  .chat-user {
    .textInput {
      width: 200px;
    }
    .chat-user-title {
      height: 86px;
      width: 100%;
      box-sizing: border-box;
      padding: 18px 20px
      .user-page {
        cursor: pointer;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: inline-block;
        vertical-align: middle;
        float: left;
        overflow: hidden;
        text-align: center;
        line-height: 50px;
        font-size: 22px;
        img {
          width: 50px;
          height: 50px;
        }
      }
      .user-mess {
        margin-top: 6px;
        float: left;
        margin-left: 10px;
        display: inline-block;
        vertical-align: middle
      }
      .user-text {
        margin-top: 6px;
        display: inline-block;
        vertical-align: middle;
        float:right;
        text-align: end;
      }
      .user-name {
        font-size: 14px;
      }
      .user-status {
        margin-top: 10px;
        font-size: 12px;
      }
    }
    .chat-user-message {
      // overflow-y: scroll;
      width: 100%;
    }
    .chat-user-message ul {
      width: 100%;
      padding: 20px;
      box-sizing: border-box;
    }
  }
  .chat-server {
    .textInput {
      width: 200px;
    }
    .chat-server-message {
      overflow-y: scroll;
      width: 100%;
    }
    .chat-server-message ul {
      width: 100%;
      padding: 20px;
      box-sizing: border-box;
    }
    .chat-server-first {
      margin: 20px 0;
      font-size: 12px;
    }
  }
  .chat-send {
    height: 60px;
    padding: 0 20px;
    position: relative;
    .textInput {
      margin-top: 15px;
      height: 30px;
      line-height 30px;
      font-size: 14px;
      margin-right: 10px;
    }
    .sendButton {
      position: absolute;
      right: 20px;
      top: 15px;
      .sendButton-img {
        vertical-align: middle;
        display: inline-block;
        position: relative;
        cursor: pointer;
        margin-right: 10px;
        .files {
          width: 30px;
          height: 30px;
          cursor: pointer !important;
          display: inline-block;
          position: absolute;
          opacity: 0;
          left: 0;
          top: 0
        }
      }
    }
  }
  .chat-item {
    margin-bottom: 20px;
    .chat-page {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      text-align: center;
      line-height: 30px;
      font-size: 12px;
      overflow: hidden;
      img {
        width: 30px;
        height: 30px;
      }
    }
    .chat-message {
    }
    .chat-message-text {
      min-height: 12px;
      padding: 8px 10px;
      font-size: 12px;
      border-radius: 2px;
      max-width: 220px;
      line-height: 20px;
      word-wrap:break-word;
      display: inline-block;
    }
    .chat-message-img {
      padding: 8px 10px;
      max-width: 220px;
      border-radius: 2px;
      img {
        max-width: 220px;
        max-height: 300px;
        display: block;
      }
    }
    .chat-message-time {
      font-size: 12px;
      margin-top: 4px;
    }
  }
  .chat-left {
    .chat-page, .chat-message {
      float: left
    }
    .chat-message {
      margin-left: 10px;
    }
    .chat-message-text, .chat-message-img {
      float: left
    }
  }
  .chat-right {
    .chat-page, .chat-message {
      float: right
    }
    .chat-message {
      margin-right: 10px;
    }
    .chat-message-time {
      text-align: end;
    }
    .chat-message-text, .chat-message-img {
      float: right
    }
  }
  input::-webkit-input-placeholder {
    font-size: 12px;
    line-height: 30px;
  }
  input::-moz-placeholder {
    font-size: 12px;
    line-height: 30px;
  }
  input::-moz-placeholder {
    font-size: 12px;
    line-height: 30px;
  }
  input::-ms-input-placeholder {
    font-size: 12px;
    line-height: 30px;
  }
}