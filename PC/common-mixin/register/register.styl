.page-register{
  .guide-center {
    p {
      font-family: PingFangSC-Regular;
      font-size: 32px;
      text-align: center;
      line-height: 52px;
      margin-top: 59px;
    }
    .guide-text {
      margin-top: 12px;
      font-size: 14px;
      text-align: center;
    }
    .guide-ht {
      vertical-align: middle;
    }
    .goLogin {
      vertical-align: middle;
      font-size: 14px;
    }
  }
  // 主体
  .page-register-content {
    padding-top: 40px; // 90 - 44
    .content-center {
      width: 380px;
      margin: 0 auto;
      .userNone {
        li {
          cursor no-drop!important
        }
      }
      .registerTab {
        margin-bottom: 24px;
      }
      // 忘记密码
      .resgister-opions {
        font-size: 12px;
        margin-top: 16px;
        .common-checkout {
          vertical-align: middle;
        }
        .text {
          user-select none;
          display: inline-block;
          vertical-align: middle;
          margin-left: 12px;
          line-height: 16px;
          cursor: pointer;
          height: 14px;
          margin-right: 4px;
        }
        a {
          vertical-align: middle;
          line-height: 16px;
          font-size: 12px;
          height: 14px;
          margin-left: 4px
        }
      }
    }
  }
  .guide-center{
    .logBtn{
      .common-button-slot{
        color #1baaec !important
      }
    }
  }
  .page-login-content{
    .logBtn{
      .common-button-slot{
        color #1baaec !important
      }
    }
  }
  .copy {
    display: none;
  }
}
// 返回首页按钮
.go-home-btn {
  border-width: 1px;
  border-style: solid;
  height: 30px;
  line-height: 30px;
  width: 110px;
  text-align: center;
  cursor: pointer;
  position: absolute;
  top: 10px;
  right: 20px;
  z-index: 10;
  user-select: none;
  display: none;
}
// 国际版
.Int {
  .page-register {
    .page-register-content {
      padding-bottom: 60px;
      position: relative;
    }
    .go-home-btn {
      display: block;
    }
    .into-guide-center {
      .guide-center {
        p {
          text-align: left;
        }
        .guide-text {
          text-align: right
        }
      }
    }
    .copy {
      display: block;
      position: absolute;
      bottom: 34px;
      text-align: center;
      font-size: 12px;
      width: 100%;
      left: 0;
    }
  }
}
