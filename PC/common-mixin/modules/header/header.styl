.top-common-header {
  user-select: none;
  height: 60px;
  width: 100%;
  padding-left: 20px;
  box-sizing: border-box;
  border-bottom-width: 1px;
  border-bottom-style: solid;
  position: relative;
  z-index: 11;
  a {
    font-size: 14px;
    height: 30px;
    line-height: 30px;
    padding: 0 12px;
    border-radius: 2px;
    display: inline-block;
  }

  // 修改主题
  .setBox {
    padding: 10px 0 0 0;
    .setColor-key {
      float: left;
      width: 100px;
      font-size: 14px;
    }
    .setColor-value {
      float: left;
      width: 300px;
      li {
        display: inline-block;
        margin-left: 50px;
        margin-top: 20px;
        &:nth-child(1), &:nth-child(2) {
          margin-top: 0px;
        }
        span {
          margin-left: 8px;
          cursor: pointer;
          font-size: 14px;
        }
      }
    }
  }
  // 主流板块
  .common-header-linkList {
    float: left;
    height: 60px;
    .header-navEven {
      line-height: 60px;
      float: left;
      margin-right: 25px;
      cursor: pointer;
      transition: all 0.3s;
      position relative
      .new-label{
        position absolute
        right -46px
        top 9px
        box-shadow: -2px 2px 4px 0 rgba(0,0,0,0.30);
        border-radius: 0px 6px 0px 6px;
        font-size: 10px;
        text-align center
        width 44px
        height 17px
        line-height 17px
      }
      &:hover {
        .header-navEven-list {
          display: block;
        }
      }
      .header-navEven-list {
        display: none;
        position: absolute;
        top: 60px;
        left: 0px;
        padding: 10px 0;
        box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
        li {
          cursor: pointer;
          text-align: left;
          min-width: 160px;
          padding: 0 20px;
          font-size: 14px;
          line-height: 40px;
          height: 40px;
          box-sizing: border-box;
        }
      }
    }
    // logo
    .linkList-logo {
      cursor: pointer;
      height: 60px;
      vertical-align: middle;
      line-height: 58px;
      position: relative;
      img {
        max-height: 50px;
        max-width: 160px;
        vertical-align: middle;
      }
    }
    .linkList-logo-li {
      float: left;
    }
    // 更多
    .header-nav-ifl {
      cursor: pointer;
      position: relative;
      margin-right: 0 !important;
      padding-right: 16px !important;
      line-height: 62px;
      float: left;
      margin-left: 10px;
      .hover {
        display: none;
      }
      &:hover {
        .icon {
          display: none;
        }
        .hover {
          display: inline-block;
        }
        .header-sub-nav {
          display: block;
        }
      }
    }
    // 币币交易/法币交易
    .button-li {
      padding: 15px 0;
      .header-button-links  {
        font-size: 14px;
        vertical-align: middle;
      }
    }
  }
  // 公共板块
  .common-header-optionList {
    float: right;
    .header-isLogin-navEven {
      height: 60px;
      float: left;
      margin-right: 25px;
      cursor: pointer;
      position: relative;
      .header-isLogin-navEven-title {
        transition: all 0.3s;
        line-height: 60px;
      }
      &:hover {
        .lang-list {
          display: block;
        }
      }
      .lang-list {
        display: none;
        position: absolute;
        top: 60px;
        left: -20px;
        padding: 10px 0;
        box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
        li {
          cursor: pointer;
          text-align: left;
          min-width: 160px;
          padding: 0 20px;
          font-size: 12px;
          line-height: 40px;
          height: 40px;
          box-sizing: border-box;
        }
      }
    }
    .header-isLogin {
      float: left;
      // padding: 15px 0;
      .header-isLogin-button {
        font-size: 14px;
        margin-right: 10px;
      }
    }
    .header-guide {
      float: left;
      // height: 60px;
      padding: 15px 20px;
      vertical-align: middle;
      border-left-width: 1px;
      border-left-style: solid;
      .header-login-button {
        font-size: 14px!important;
        margin-right: 16px;
        padding: 0 22px;
        height: 30px;
      }
      .header-reg-button {
        font-size: 14px!important;
        margin-right: 16px;
        padding: 0 22px;
        height: 30px;
        border-radius: 2px;
        border-width: 1px;
        border-style: solid;
      }
    }
    .header-user {
      float: left;
      height: 60px;
      width: 60px;
      line-height: 62px;
      text-align: center;
      border-left-width: 1px;
      border-left-style: solid;
      position: relative;
      &:hover {
        .header-user-market,
        .header-user-message,
        .header-user-appdown,
        .icon-active {
          display: block;
        }
        .icon-info {
          display: none
        }
      }
      .icon-active {
        display: none
      }
      .header-user-market {
        padding-bottom: 10px;
      }
      .header-user-market,
      .header-user-appdown,
      .header-user-message {
        box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
        top: 60px;
        display: none;
        position: absolute;
        width: 240px;
        height: 120px;
        left: -90px;
        z-index: 9999;
      }
      .header-user-message {
        height: auto;
        width: 320px;
        right: -99px;
        left: auto;
        min-height: 100px;
        .header-user-text {
          height: auto;
          li {
            height: 30px;
            line-height: 30px;
            overflow: hidden;
          }
          .mesageNav {
            cursor: pointer;
          }
        }
      }
      .header-user-icon {
        cursor: pointer;
      }
      .header-user-text {
        height: 80px;
        padding: 16px 22px;
        box-sizing: border-box;
        line-height: 24px;
        text-align: left;
        font-size: 12px;
        .userText {
          font-size: 14px;
          cursor: pointer;
        }
      }
      .header-user-out {
        height: 40px;
        padding: 0 22px;
        line-height: 40px;
        text-align: left;
        font-size: 12px;
        cursor: pointer;
      }
      .header-user-appdown{
        box-sizing:border-box;
        left: auto;
        right: 0;
        height: 177px;
        width: 340px;
        padding: 30px 40px;
        .code-box{
          width:90px;
          float:left;
          .download-options-code{
            width: 90px;
            height: 90px;
            overflow:hidden;
            img{
              width: 110px;
              position: relative;
              top: -10px;
              left: -10px;
            }
          }
          .download-options-codeText{
            font-family: PingFangSC-Regular;
            font-size: 12px;
            line-height: 12px;
            color: #828EA1;
            letter-spacing: 0;
            text-align: center;
            margin-top: 10px;
          }
        }
        .download-options-buttons{
          float: right;
          button{
            display: block;
            width: 130px;
            &:first-child{
              margin-bottom: 10px;
            }
          }
        }
      }
    }
    .header-lang {
      float: left;
      height: 60px;
      min-width: 120px;
      line-height: 60px;
      text-align: center;
      border-left-width: 1px;
      border-left-style: solid;
      font-size: 14px;
      position: relative;
      user-select: none;
      .show-lang {
        cursor: pointer;
        padding: 0 20px;
        font-size: 12px;
        box-sizing: border-box;
      }
      &:hover {
        .lang-list {
          display: block;
        }
      }
      .lang-list {
        display: none;
        position: absolute;
        top: 60px;
        right: 0px;
        padding: 10px 0;
        box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
        li {
          cursor: pointer;
          text-align: left;
          min-width: 160px;
          padding: 0 20px;
          font-size: 12px;
          line-height: 40px;
          height: 40px;
          box-sizing: border-box;
        }
      }
    }
  }
  .messageCount {
    position: absolute;
    width: 6px;
    height: 6px;
    background: red;
    border-radius: 100px;
    top: 20px;
    left: 32px;
  }
  .header-sub-nav {
    display: none;
    position: absolute;
    width: 175px;
    left: 0;
    top: 60px;
    z-index: 99;
    padding: 10px 0;
    .header-user-text {
      padding: 0;
      box-sizing: border-box;
      text-align: left;
      font-size: 12px;
      li {
        float: none;
        margin: 0;
        padding: 0;
        span {
          line-height: 17px;
          padding: 12px 20px;
          font-size: 14px;
          display: block;
        }
      }
    }
  }
  .h-2-bd{
    border-color #293448 !important
  }
}
