.currency-notes.currency-notes-contianer {
  .flex-row {
    display: flex;
    flex-direction: row;
    line-height: 17px;
    margin-bottom: 10px;

    .key {
      font-size: 12px;
      letter-spacing: 0;
    }

    .val {
      flex-grow: 1;
      text-align: right;
      font-size: 12px;
    }

    .link-label {
      font-size: 12px;
      color: #24A0F5;
      margin-left: 20px;
    }
  }

  box-sizing: border-box;
  padding: 24px 20px 20px 20px;
  z-index: 99;
  width: 340px;
  height: 480px;
  box-shadow: 0 3px 4px 1px rgba(0, 0, 0, 0.28);

  .content {
    margin-top: 16px;
    width: 299px;
    height: 240px;

    .text {
      padding-right: 10px;
      font-size: 12px;
      letter-spacing: 0;
      line-height: 20px;
      word-break: break-all;
    }
  }
}