.innovation {
  .common-verify {
    display none
  }

  font-size 14px

  .page-banner {
    height 220px
  }

  .innovation-content {
    width 1180px
    margin 0 auto
    padding-top 24px
  }

  .main-content {
    width 760px
    min-height 920px
    padding 0 20px
    border-radius 2px
    float left

    .content-top {
      padding 46px 0 50px
      border-bottom-width 1px
      border-bottom-style solid

      .img {
        width 80px
        height 80px
        float left

        img {
          width 100%
          height 100%
        }
      }

      .info {
        padding-left 100px
      }

      .tit {
        font-size 22px
        line-height 22px
        font-weight normal
      }

      .info-text {
        margin-top 24px
        line-height 22px
        font-size 14px
      }
    }

    .main-text {
      line-height 24px
      padding-top 34px
      word-break break-all

      img {
        max-width 100% !important
        max-height 100% !important
      }

      p {
        word-break break-all
      }
    }
  }

  .base-info {
    width 320px
    padding 20px 20px 40px
    min-height 883px
    border-radius 2px
    float right

    .title {
      font-size 16px
      font-weight normal
    }

    .bf {
      font-size 12px
      width 320px
      margin 40px 0

      p {
        line-height 12px
      }

      .jdt {
        position relative
        height 6px
        width 100%
        margin 9px 0px
        overflow hidden
      }

      .jdt-bar {
        position absolute
        top 0
        left 0
        height 100%
        width 50%
      }

      .num {
        line-height 14px
      }
    }

    .infor-list {
      .spend-regon {
        margin-top 18px

        p {
          font-size 12px
          text-align right
          line-height 22px
          margin-bottom 0
        }
      }

      p {
        margin-bottom 20px
      }

      .key {
        font-size 12px
        margin-bottom 8px
      }

      .tsm {
        margin 25px 0
        padding 15px 15px 1px 15px
      }

      .val{
        line-height 20px
      }

      .vol {
        font-size 12px
        margin 5px 0 28px
        text-align right
      }

      .tt {
        margin 10px 0 0
        font-size 12px
        text-align right

        a {
          margin-left 10px
        }
      }
    }
  }

  .f-r {
    float right
  }
}