.page-creditCard {
  .creditCard-callBack {
    line-height: 22px;
  }
  .noPay {
    font-size: 14px;
    margin-top: 10px;
    cursor: pointer;
  }
  .input-line-warning {
    right: 0
  }
  .creditCard-page-icon {
    // line-height: 28px;
    cursor: pointer
    display: inline-block
    margin-left: 5px;
    position: relative;
    vertical-align: middle;
    &:hover {
      .creditCard-page-market {
        display block;
        li {
          word-break: break-all
          font-size: 12px;
          line-height: 16px;
          margin-bottom: 4px;
        }
        .warn {
          margin-top: 10px
        }
      }
    }

    .creditCard-page-market {
      word-break: break-all
      box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
      display none
      position absolute
      top 18px
      width 320px
      padding 20px
      left 0
      box-sizing border-box
      font-family PingFangSC-Regular
      font-size 12px
      letter-spacing 0
      line-height 20px
      z-index 10
    }
  }
  width: 1180px;
  min-height: 800px;
  padding-bottom: 80px;
  margin: 30px auto 0 auto;
  // 头部选择币种
  .creditCard-symbolNav {
    height: 55px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    padding-left: 60px;
    // padding-top: 31px;
    line-height: 55px;
    box-sizing: border-box;
    .creditCard-imgs {
      float: right;
      margin-right: 60px;
      img {
        margin-left: 5px;
        width: 40px;
      }
    }
  }
  // 主体
  .creditCard-main {
    padding-left: 60px;
    padding-top: 34px;
    box-sizing: border-box;
  }
  .creditCard-warn {
    width: 380px;
    margin-top: 40px;
    font-size: 12px;
    line-height: 20px;
    span {
      cursor: pointer;
    }
  }
  .creditCard-main-even {
    width: 380px;
  }
  .creditCard-main-input {
    width: 290px;
    display: inline-block;
  }
  .creditCard-main-inputLine {
    width: 2px;
    height: 16px;
    margin-bottom: 6px;
  }
  .creditCard-main-select {
    width: 90px;
    display: inline-block;
    .input_line_inp {
      text-align: center
    }
  }
  .otc-page-title {
    display: none;
  }
  .creditCard-confirm-mess {
    line-height: 22px;
  }
  .powered {
    line-height: 20px;
    margin-top: 20px;
    .powered-tit {
      vertical-align: middle;
    }
    .powered-img {
      width: 60px;
      margin-left: 5px;
      vertical-align: middle;
    }
  }
  .creditCard-confirm-options {
    margin-top: 40px;
    .common-checkout {
      float: left;
      margin-top: 2px;
    }
    .creditCard-confirm-text {
      float: right;
      width: 375px;
      line-height: 20px;
      font-size: 12px;
    }
  }
}
.Int {
  .page-creditCard {
    margin: 0;
    padding: 0;
    width: auto;
    height: 100%;
    .page-creditCard-coneent {
      height: calc(100% - 85px);
    }
    .creditCard-symbolNav,
    .creditCard-main {
      padding-left: 0;
    }
    .page-creditCard-bar {
      width: 940px;
      margin: 0 auto;
      padding-bottom: 40px;
    }
    .otc-page-title  {
      height: 80px;
      line-height: 80px;
      // margin-bottom: 5px;
      border-bottom-width: 5px;
      border-bottom-style: solid;
      display: block;
      .page-title-bar {
        width: 940px;
        margin: 0 auto;
        font-size: 16px;
      }
    }
  }
}