.page-login {
  .guide-center {
    p {
      font-family: PingFangSC-Regular;
      font-size: 32px;
      text-align: center;
      line-height: 52px;
      margin-top: 59px;
    }
    .guide-text {
      margin-top: 12px;
      font-size: 14px;
      text-align: center;
    }
    .guide-ht {
      vertical-align: middle;
    }
    .goRegister {
      vertical-align: middle;
      font-size: 14px;
    }
  }
  // 主体
  .page-login-content {
    padding-top: 47px; // 90 - 43
    .content-center {
      width: 380px;
      margin: 0 auto;
      // 忘记密码
      .forgetPassword {
        font-size: 12px;
        line-height: 20px;
        margin-top: 6px;
      }
      .thirdBox{
        margin-top: 20px;
        position: relative;
        .thirdBoxTitle{
          font-size:14px;
          margin-bottom:6px;
        }
        .thirdInfor{
          width: 100%;
          height: 100%;
          cursor:pointer;
          padding: 6px 0;
          border-bottom-width: 2px;
          border-bottom-style: solid;
          height: 32px;
          img{
            width:32px;
            height:32px;
            border-radius:50%;
            float:left;
            margin-right:10px;
          }
          .thirdName{
            float:left;
            line-height:32px;
          }
          .dowm-icon {
            border-style: solid;
            float: right;
            width: 6px;
            height: 6px;
            border-width: 0;
            margin: 12px 20px 0 0;
            border-bottom-width: 2px;
            border-right-width: 2px;
            transform:rotate(45deg);
          }
        }
        .notborder {
          border: none;
        }
        .third-list {
          position: absolute;
          transform-origin: center top 0px;
          top: 66px;
          left: 0;
          right: 0;
          z-index: 9;
          box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
          border-radius: 2px;
          font-size: 14px;
          padding: 10px 0;
          display: none;
        }
        &:hover{
          .third-list {
            display: block;
          }
        }
        .third-item {
          height 32px;
          line-height: 32px;
          cursor: pointer;
          padding: 6px 20px;
          img{
            width:32px;
            height:32px;
            border-radius:50%;
            float:left;
            margin-right:10px;
          }
          .third-val{
            float:left;
            line-height:32px;
          }
        }
      }
    }
  }
  .copy {
    display: none;
  }
}
.guide-center{
  .logBtn{
    .common-button-slot{
      color #1baaec !important
    }
  }
}
.page-login-content{
  .logBtn{
    .common-button-slot{
      color #1baaec !important
    }
  }
}
// 返回首页按钮
.go-home-btn {
  border-width: 1px;
  border-style: solid;
  height: 30px;
  line-height: 30px;
  width: 110px;
  text-align: center;
  cursor: pointer;
  position: absolute;
  top: 10px;
  right: 20px;
  z-index: 10;
  user-select: none;
  display: none;
}
// 国际版
.Int {
  .go-home-btn {
    display: block;
  }
  .page-login {
    .into-guide-center {
      .guide-center {
        p {
          text-align: left;
        }
        .guide-text {
          text-align: right
        }
      }
    }
    .copy {
      display: block;
      position: absolute;
      bottom: 34px;
      text-align: center;
      font-size: 12px;
      width: 100%;
      left: 0;
    }
  }
}



