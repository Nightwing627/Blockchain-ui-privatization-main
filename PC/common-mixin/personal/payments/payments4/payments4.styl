.payment1{
  width:100%;
  .upload_div{
    width:120px;
    height:120px;
    border-style: dashed;
    border-width: 1px;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
    svg {
      margin:36px 47px 12px 47px;
    }
    p{
      font-size: 12px;
      text-align: center;
    }
    .upload_file{
      width: 120px;
      height: 120px;
      position: absolute;
      cursor: pointer;
      top:0;
      left 0;
      z-index:2;
    }
    .common-button-loading {
      position: absolute;
      vertical-align: middle;
      left: 50%;
      margin-left:-17px;
      top: 45px;
      transform: translateY(-50%)
    }
    .loading-mc{
      position: absolute;
      top:0;
      left:0;
      z-index: 1;
      div{
        width: 100%;
        height: 100%;
        position: absolute;
        top:0;
        left:0;
        opacity:0.7;
      }
      .loading-img{
        width:100%;
        height:100%;
        margin: 0;
      }
    }
    .loading-text2{
      z-index: 3;
      position: relative;
    }
    .loading-text{
      margin-top:70px;
    }
  }
  .upload_p{
    font-size:12px;
    margin: 12px 0 24px 0;
  }
}