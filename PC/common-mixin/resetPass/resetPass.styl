.page-resetPass {
  .guide-center {
    p {
      font-family: PingFangSC-Regular;
      font-size: 32px;
      text-align: center;
      line-height: 52px;
      margin-top: 59px;
    }
    .guide-text {
      margin-top: 12px;
      font-size: 14px;
      text-align: center;
    }
  }
  // 主体
  .page-resetPass-content {
    padding-top: 40px; // 90 - 44
    .content-center {
      width: 380px;
      margin: 0 auto;
      .resetPassTab {
        margin-bottom: 24px;
      }
    }
  }
  .copy {
    display: none;
  }
}
// 返回首页按钮
.go-home-btn {
  border-width: 1px;
  border-style: solid;
  height: 30px;
  line-height: 30px;
  width: 110px;
  text-align: center;
  cursor: pointer;
  position: absolute;
  top: 10px;
  right: 20px;
  z-index: 10;
  user-select: none;
  display: none;
}
// 国际版
.Int {
  .page-resetPass {
    .go-home-btn {
      display: block;
    }
    .into-guide-center {
      .guide-center {
        p {
          text-align: left;
        }
      }
    }
    .copy {
      display: block;
      position: absolute;
      bottom: 34px;
      text-align: center;
      font-size: 12px;
      width: 100%;
      left: 0;
    }
  }
}
